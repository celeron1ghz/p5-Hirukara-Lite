[% WRAPPER 'wrapper.tt' WITH header_title = "トップページ" %]
<style>
td, th { padding: 2px 5px }
#current_exhibition { border-radius: 5px; border: 1px solid gray; padding: 5px; background-color: #ddd }
.exhibition { font-size: 120%; font-weight: bold }

div#notice { margin-bottom: 20px }
div#notice > div { margin-bottom: 10px; padding: 0px 10px 10px 10px; white-space: pre; border: 1px dotted gray; border-radius: 10px; line-height: 1.3em; }
div#notice > div h5 { color: blue }
</style>

<div id="current_exhibition">現在は<span class="exhibition">[% current_exhibition %]</span>のチェックリストを集計しています。</div>

[% IF notice.size() %]
<div id="notice">
    <h4>お知らせ</h4>
    [% FOREACH n IN notice %]<div><h5>[% n.title %] ([% n.created_at %])</h5>[% n.text %]</div>[% END %]
</div>
[% END %]

